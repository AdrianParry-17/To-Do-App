{
    "database" : {
        "connectArgs" : {
            "check_same_thread" : false
        },
        "poolSize" : 32,
        "maxOverflow" : 32,

        "maxQueryLimit" : 100,
        "session" : {
            "expireOnCommit" : false
        }
    },
    "logging" : {
        "name" : "To-Do App Backend",
        "console" : {
            "enabled" : true,
            "debugMode" : false
        },
        "file" : {
            "enabled" : true,
            "debugMode" : true,
            "folder" : "data\\logs",
            "nameFormat" : "%Y%m%d-%H%M%S.log"
        }
    },
    "security" : {
        "jwtAlgorithm" : "HS256",
        "accessTokenExpireTime" : 3600
    }
}